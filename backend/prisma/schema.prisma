generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id              // Clerk userId
  email     String   @unique
  firstName String
  lastName  String
  role      UserRole @default(COMPTABLE)
  company   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clients   Client[]
  documents Document[]
  deadlines Deadline[]
  alerts    Alert[]

  @@map("users")
}

model Client {
  id        String       @id @default(uuid())
  firstName String
  lastName  String
  email     String       
  phone     String
  nasNumber String
  address   String
  status    ClientStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents Document[]
  deadlines Deadline[]

  @@index([nasNumber])
  @@map("clients")
}

model Document {
  id         String         @id @default(uuid())
  name       String
  type       String
  size       Int
  filePath   String
  fileContent Bytes?
  status     DocumentStatus @default(PENDING)
  uploadedAt DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model Deadline {
  id          String           @id @default(uuid())
  title       String
  description String
  dueDate     DateTime
  priority    DeadlinePriority @default(MEDIUM)
  status      DeadlineStatus   @default(PENDING)
  type        DeadlineType
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("deadlines")
}

model Alert {
  id        String        @id @default(uuid())
  type      AlertType
  title     String
  message   String
  priority  AlertPriority @default(MEDIUM)
  read      Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("alerts")
}

enum UserRole {
  COMPTABLE
  ADMIN
}

enum ClientStatus {
  ACTIVE
  INACTIVE
}

enum DocumentStatus {
  PENDING
  PROCESSED
  APPROVED
}

enum DeadlineStatus {
  PENDING
  COMPLETED
  INACTIVE
}

enum DeadlinePriority {
  LOW
  MEDIUM
  HIGH
}

enum DeadlineType {
  FEDERAL
  PROVINCIAL
  MUNICIPAL
}

enum AlertType {
  DEADLINE
  DOCUMENT
  SYSTEM
}

enum AlertPriority {
  LOW
  MEDIUM
  HIGH
}